<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.paolo.agendhelp.MainActivity">

   <RelativeLayout
       android:id="@+id/relativeLayout1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Lista delle attività"
           android:textSize="25dp"
           android:textColor="#000000"
           android:layout_marginLeft="15dp"
           android:layout_marginTop="8dp"
           />
       <ImageView
           android:layout_marginTop="100dp"
           android:layout_centerInParent="true"
           android:layout_width="80dp"
           android:layout_height="80dp"
           android:src="@drawable/attivita2"
           />
   </RelativeLayout>
    <ListView
        android:layout_below="@id/relativeLayout1"
        android:layout_marginTop="145dp"
        android:id="@+id/mialista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        >
    </ListView>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_below="@id/mialista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        >
        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Aggiungi attività"
            />
        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Elimina  attività"
            />

    </LinearLayout>

</RelativeLayout>
