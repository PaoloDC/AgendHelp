<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="10dp"
        android:background="#0050b1"
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:onClick="clickBack"
            android:text="back"
            android:textSize="@dimen/dimensione_testo_inserisci" />

        <TextView
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inserisci il nome dell'attivitÃ "
            android:textSize="@dimen/dimensione_testo_inserisci" />

        <EditText
            android:id="@+id/etNomeAttivita"
            android:textColor="#FFFFFF"
            android:textColorHint="#7c7c7c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ricordami di...."
            android:textSize="@dimen/dimensione_testo_inserisci" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llTop"
        android:orientation="vertical"
        android:id="@+id/gridLayout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/attivita2"
                android:onClick="clickData"
                />

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data"
                    android:textSize="@dimen/dimensione_testo_bottoni_inserimento" />

                <TextView
                    android:id="@+id/tvData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/testo_esempio"
                    android:textSize="@dimen/dimensione_testo_bottoni_inserimento" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/orologio"
                android:onClick="clickOra"
                />

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ora"
                    android:textSize="@dimen/dimensione_testo_bottoni_inserimento" />

                <TextView
                    android:id="@+id/tvOra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/testo_esempio"
                    android:textSize="@dimen/dimensione_testo_bottoni_inserimento" />

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ripetizione"
                android:onClick="clickRipetizione"
                />

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ripetizione"
                    android:textSize="@dimen/dimensione_testo_bottoni_inserimento" />

                <TextView
                    android:id="@+id/tvRipetizione"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/testo_esempio"
                    android:textSize="@dimen/dimensione_testo_bottoni_inserimento" />

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/importante"
                android:onClick="clickImportanza"
                />

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Importanza"
                    android:textSize="@dimen/dimensione_testo_bottoni_inserimento" />

                <TextView
                    android:id="@+id/tvImportanza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/testo_esempio"
                    android:textSize="@dimen/dimensione_testo_bottoni_inserimento" />

            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/androidsuoneria"
                android:onClick="clickSuoneria"
                />

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suoneria"
                    android:textSize="@dimen/dimensione_testo_bottoni_inserimento" />

                <TextView
                    android:id="@+id/tvSuoneria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/testo_esempio"
                    android:textSize="@dimen/dimensione_testo_bottoni_inserimento" />

            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:onClick="clickAvviso"
                android:text="AVV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avviso"
                    android:textSize="@dimen/dimensione_testo_bottoni_inserimento" />

                <TextView
                    android:id="@+id/tvAvviso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/testo_esempio"
                    android:textSize="@dimen/dimensione_testo_bottoni_inserimento" />

            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

    <Button
        android:onClick="clickInserisciAttivita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Inserisci"
        android:textSize="@dimen/dimensione_testo_inserisci" />
</RelativeLayout>