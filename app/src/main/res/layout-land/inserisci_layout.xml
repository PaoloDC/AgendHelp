            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:onClick="clickAvviso"
                    android:text="AVV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avviso"
                        android:textSize="@dimen/dimensione_testo_bottoni_inserimento" />

                    <TextView
                        android:id="@+id/tvAvviso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/testo_esempio"
                        android:textSize="@dimen/dimensione_testo_bottoni_inserimento" />

                </LinearLayout>
            </LinearLayout>
            -->
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/gridLayout"
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="120dp"
        android:layout_marginRight="3dp">
        <Button
            android:onClick="clickInserisciAttivita"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Inserisci"
            android:textSize="@dimen/dimensione_testo_inserisci"
            android:background="#0973de"/>
        <Button
            android:layout_marginTop="5dp"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:onClick="clickBack"
            android:text="back"
            android:textSize="@dimen/dimensione_testo_inserisci"
            android:background="#ef7a04"/>
    </LinearLayout>


</RelativeLayout>